<div class="main-page-wrapper issue">
    <div class="row">
        <div class="col-lg-5">
            <div class="row">
                <div class="col-lg-12">
                    <h1>{{issue.title}}</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    Category: <a href="/issues"><span class="label label-primary">{{category.name}}</span></a>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    Applied:
                    <a href="/issue/{{issue._id}}"><span class="label label-success">Alexsey</span></a>
                    <a href="/issue/{{issue._id}}"><span class="label label-success">Bohdan.chechikov</span></a>
                    <a href="/issue/{{issue._id}}"><span class="label label-success">Svetlana.Lutsenko</span></a>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    Watchers:
                    <a href="/issue/{{issue._id}}"><span class="label label-info">Petrov</span></a>
                    <a href="/issue/{{issue._id}}"><span class="label label-info">Vitaliy.Alexeev</span></a>
                    <a href="/issue/{{issue._id}}"><span class="label label-info">dimon</span></a>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 description">
                    {{issue.description}}
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <img src="{{issue.media}}" alt="photo"/>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="row">
                <div class="chat">
                    <div class="well bs-component">
                        <div><h4>Chat</h4></div>
                        <div class="messages">
                            <ul>
                                <li>
                                    Lorem Ipsum is simply dummy text of the printing and typesetting industry.
                                </li>
                                <li>
                                    Lorem Ipsum is simply dummy text of the printing and typesetting industry.
                                </li>
                            </ul>
                        </div>
                        <form class="form-horizontal">
                            <fieldset>
                                <div class="form-group">
                                    <div class="col-lg-10">
                                        <input type="text" placeholder="Message" id="inputEmail" class="form-control">
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                        <div class="btn btn-primary btn-xs" id="source-button" style="display: none;">&lt; &gt;</div></div>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="row">
                <h4>Related issue</h4>
            </div>
            <div class="row">
                <h4>Best practice</h4>
                <ul class="list">
                    <li>123</li>
                </ul>
            </div>
        </div>
    </div>
</div>