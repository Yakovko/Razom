<style type="text/css" rel="stylesheet">
    .main-issue-list {
        background: white;
    }

    .user-issue-list {
        background: lightgray;
    }

    .issueItem {
        padding: 20px 5%;
        background: #ddeeff;
        margin-top: 20px;
    }
</style>
